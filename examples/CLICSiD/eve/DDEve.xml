<ddeve>
  <display visLevel="7" loadLevel="2"/>
  <calodata name="Ecal" hits="EcalBarrelHits" towerH="100" emax="20"
	    n_eta="200" eta_min="-5" eta_max="5" 
	    n_phi="200" phi_min="-pi" phi_max="pi" 
	    alpha="0.5" rmin="EcalBarrel_rmin" dz="EcalEndcap_zmin" color="kRed"/>
  <calodata name="EcalEndcap" use="Ecal" hits="EcalEndcapHits"/>

  <calodata name="Hcal" hits="HcalBarrelHits"  towerH="100" emax="500"
	    n_eta="200" eta_min="-5" eta_max="5" 
	    n_phi="200" phi_min="-pi" phi_max="pi"
	    alpha="0.5" rmin="HcalBarrel_rmin" dz="HcalEndcap_zmin" color="kBlue"/>
  <calodata name="HcalEndcap" use="Hcal" hits="HcalEndcapHits"/>

  <calodata name="Muon" hits="MuonBarrelHits" towerH="2" emax="2"
	    n_eta="200" eta_min="-5" eta_max="5" 
	    n_phi="200" phi_min="-pi" phi_max="pi" 
	    alpha="0.5" rmin="MuonBarrel_rmin" dz="MuonEndcap_zmin" color="kGreen"/>
  <calodata name="MuonEndcap" use="Muon" hits="MuonEndcapHits"/>

  <calodata name="SiVertex" hits="SiVertexBarrelHits" towerH="0.1"
	    n_eta="200" eta_min="-5" eta_max="5" 
	    n_phi="200" phi_min="-pi" phi_max="pi" 
	    alpha="0.5" rmin="VertexEndcap_rmax" dz="VertexService_zmax" color="kMagenta"/>
  <calodata name="SiVertexEndcap" use="SiVertex" hits="SiVertexEndcapHits"/>

  <calodata name="SiTracker" hits="SiTrackerBarrelHits" towerH="0.1"
	    n_eta="200" eta_min="-5" eta_max="5" 
	    n_phi="200" phi_min="-pi" phi_max="pi" 
	    alpha="0.5" rmin="ForwardTracker_rmax" dz="ForwardTracker_z3" color="kCyan"/>
  <calodata name="SiTrackerEndcap" use="SiTracker" hits="SiTrackerEndcapHits"/>
  <calodata name="SiTrackerForward" use="SiTracker" hits="SiTrackerForwardHits"/>

  <view name="3D Trackers R-Phi (Global)" type="RhoPhiProjection" structure="false" sensitive="true">
    <detelement name="SiVertexBarrel"    load_geo="-1" show="4" alpha="0.5"/>
    <detelement name="SiTrackerBarrel"   load_geo="-1" show="4" alpha="0.5"/>
  </view>
  <view name="3D Trackers R-Phi (Local)" type="RhoPhiProjection" structure="false" sensitive="true">
    <detelement name="SiVertexBarrel"    load_geo="4" show="4" alpha="0.5"/>
    <detelement name="SiTrackerBarrel"   load_geo="4" show="4" alpha="0.5"/>
  </view>
<!--
    <detelement name="SiTrackerEndcap"   load_geo="-1" show="2" alpha="0.5"/>
    <detelement name="SiVertexEndcap"    load_geo="-1" show="2" alpha="0.5"/>
    <detelement name="SiTrackerForward"  load_geo="-1" show="2" alpha="0.5"/>
-->

  <view name="3D Trackers" type="View3D" structure="false" sensitive="true">
    <detelement name="SiVertexBarrel"    load_geo="-1" show="2" alpha="0.5"/>
    <detelement name="SiVertexEndcap"    load_geo="-1" show="2" alpha="0.5"/>
    <detelement name="SiTrackerBarrel"   load_geo="-1" show="2" alpha="0.5"/>
    <detelement name="SiTrackerEndcap"   load_geo="-1" show="2" alpha="0.5"/>
    <detelement name="SiTrackerForward"  load_geo="-1" show="2" alpha="0.5"/>
  </view>
  <view name="3D Vertex" type="View3D" structure="false" sensitive="true">
    <detelement name="SiVertexBarrel" load_geo="2" show="2" alpha="0.5"/>
    <detelement name="SiVertexEndcap" load_geo="2" show="2" alpha="0.5"/>
  </view>

  <view name="3D Calorimeters" type="View3D" show="2" load_geo="2" structure="false" sensitive="true">
    <detelement name="EcalBarrel" load_geo="3" show="0" alpha="0.5"/>
    <detelement name="EcalEndcap" load_geo="3" show="0" alpha="0.5"/>
    <detelement name="HcalPlug"   load_geo="3" show="0" alpha="0.5"/>
    <detelement name="HcalBarrel" load_geo="3" show="0" alpha="0.5"/>
    <detelement name="HcalEndcap" load_geo="3" show="0" alpha="0.5"/>
<!--
    <detelement name="MuonBarrel" load_geo="1" show="0" alpha="0.5"/>
    <detelement name="MuonEndcap" load_geo="1" show="0" alpha="0.5"/>
-->
  </view>
  <view name="Calo 3D" type="Calo3DProjection" show="1" load_geo="1">
    <calodata name="Ecal"/>
    <calodata name="Hcal"/>
    <calodata name="EcalEndcap"/>
    <calodata name="HcalEndcap"/>
  </view>
  <view name="Calo Lego" type="CaloLego" show="1" load_geo="1">
    <calodata name="Ecal"/>
    <calodata name="Hcal"/>
    <calodata name="EcalEndcap"/>
    <calodata name="HcalEndcap"/>
  </view>
  <view name="Muon 3D" type="Calo3DProjection" show="1" load_geo="1">
    <calodata name="Muon"/>
    <calodata name="MuonEndcap"/>
  </view>
  <view name="Silicon Deposits" type="Calo3DProjection" show="1" load_geo="1">
    <calodata name="SiVertex"/>
    <calodata name="SiVertexEndcap"/>
    <calodata name="SiTracker"/>
    <calodata name="SiTrackerEndcap"/>
    <calodata name="SiTrackerForward"/>
  </view>

  <view name="Calo 2D" type="Calo2DProjection" show="1" load_geo="1">
    <calodata name="Ecal"/>
    <calodata name="Hcal"/>
    <calodata name="Muon"/>
    <detelement name="EcalBarrel" load_geo="-1" show="1" alpha="0.5"/>
    <detelement name="HcalBarrel" load_geo="-1" show="1" alpha="0.5"/>
  </view>
  <include ref="../compact/compact.xml"/>
</ddeve>
